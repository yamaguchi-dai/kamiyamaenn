<div class="row">
  <div class="col m10 offset-m1">
    <div class="card">
      <div class="card-content">
        <span class="card-title center-align">ログイン</span>
        <%= form_tag('/login') do %>

          <div class="row">
            <div class="input-field col m6 offset-m3">
              <input id="login_mail_address" name="login_mail_address" type="text" class="validate">
              <label for="login_mail_address">ログインメールアドレス</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col m6 offset-m3">
              <input id="password" type="text" name="password" class="validate">
              <label for="password">パスワード</label>
            </div>
          </div>
          <div class="row">
            <div class="col m12 center">
              <button class="btn waves-effect waves-light" type="submit" name="action">ログイン
                <i class="material-icons right">send</i>
              </button>
            </div>
          </div>
        <% end %>
      </div>


    </div>
  </div>

</div>